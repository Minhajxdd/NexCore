<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>Signup</title>
    
    <!-- Google font -->
    <link href="/style/cdn/googleFontMontserrat.css" rel="stylesheet">

    <!-- Bootstrap -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@3.3.7/dist/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">


    <!-- Font Awesome Icon -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css">

    <!-- Style Sheet -->
    <link rel="stylesheet" href="/style/form-style.css">

    <style>
        html{
            height: 100%;
        }

        .alert {
            padding: 10px;
            margin: 10px 0;
            border: 1px solid transparent;
            border-radius: 10px;
            position: fixed;
            top: 5%;
        }

        .alert-info {
            color: #0056b3;
            background-color: #e7f0ff;
            border-color: #b6d4fe;
            font-weight: bolder;
        }

    </style>

</head>

<body>

    <% if (alertMessage) { %>
        <div class="alert alert-info">
            <%= alertMessage %>
        </div>
    <% } %>

    <!-- LOGIN FORM -->
    <div class="signup-form">
        <h2>Admin Login</h2>
        <!-- Error message placeholder -->
        <label id="error-message"></label> 

        <form action="/admin/login" method="POST" onsubmit="return adminLoginForm()">
            <div class="form-group">
                <input id="user-name" type="text" class="form-control" placeholder="User Name" name="uname" required data-toggle="tooltip" data-placement="top" title="Create a password">
            </div>
            <div class="form-group">
                <input id="password" type="password" class="form-control" placeholder="Password" name="password" required data-toggle="tooltip" data-placement="top" title="Create a password">
            </div>
            <button type="submit" class="btn btn-signup">Login <i class="fas fa-arrow-right"></i></button>
        </form>

    </div>
    <!-- /LOGIN FORM -->

    <!-- jQuery Plugins -->
    <script src="/script/jQuery.js"></script>
    <script src="/script/bootstrap.min.js"></script>
    <script src="/script/validate.js"></script>

    <script>
        $(function () {
            $('[data-toggle="tooltip"]').tooltip()
        })
    </script>

</body>

</html>
