<%- include('../../partials/admin/head'); -%>

<title>Sales Report</title>

<%- include('../../partials/admin/nav'); -%>

<style>
  #custom-date-div {
    display: flex;
    align-items: center;
    gap: 10px;
  }

  .custom_select {     
    background-color: #191c24;     
    border-radius: 4px;     
    padding: 5px;     
    width: fit-content;   
}    

.form-select {     
    background-color: #191c24;     
    color: #ffffff;     
    border: 1px solid #282c35;     
    border-radius: 4px;     
    padding: 6px 10px;     
    font-size: 14px;     
    width: auto;     
    height: auto;     
    box-shadow: none;     
    outline: none;     
    transition: border-color 0.3s ease-in-out;   
}    

.form-select:focus {     
    border-color: #495057;   
}    

.form-select option {     
    background-color: #191c24;     
    color: #ffffff;     
    padding: 8px 10px;     
    font-size: 14px;   
}    

#custom-date-div {     
    background-color: #191C24;     
    padding: 10px;     
    border-radius: 4px;     
    display: flex;     
    gap: 15px;     
    align-items: center;   
}  

#custom-date-div h6 {     
    color: #ffffff;     
    font-size: 14px;     
    margin-bottom: 5px;   
}  

#custom-date-div input[type="date"] {     
    background-color: #191C24;     
    color: #ffffff;     
    border: 1px solid #282C35;     
    border-radius: 4px;     
    padding: 6px 10px;     
    font-size: 14px;     
    height: auto;     
    box-shadow: none;     
    outline: none;     
    transition: border-color 0.3s ease-in-out;   
}  

#custom-date-div input[type="date"]:focus {     
    border-color: #495057;   
}  

#customGenerate a {     
    background-color: #007bff;     
    color: #ffffff;     
    padding: 6px 12px;     
    border-radius: 4px;     
    text-decoration: none;     
    font-size: 14px;     
    transition: background-color 0.3s ease-in-out;   
}  

#customGenerate a:hover {     
    background-color: #0056b3;   
}

</style>

<!-- partial -->
<div class="main-panel">
  <div class="content-wrapper">
    <div class="row">
      <div class="col-12 grid-margin stretch-card">
        <div class="card corona-gradient-card">
          <div class="card-body py-0 px-0 px-sm-3 title-div">
            <div class="row align-items-center">
              <div class="col-4 col-sm-3 col-xl-2">
                <img
                  src="/admin_template/assets/images/dashboard/Group126@2x1.png"
                  class="gradient-corona-img img-fluid"
                  alt=""
                />
              </div>
              <div class="col-5 col-sm-7 col-xl-8 p-0 title">
                <h2 class="mb-1 mb-sm-0">Sales Report</h2>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="col-12 grid-margin">
      <div class="card">
        <div class="card-body">


          
          <!-- Date Filter Drop -->
          <div
            id="date-drop-main-div"
            style="display: flex; justify-content: space-between"
          >
            <div class="col-lg-2 col-md-3 col-6">
              <div class="custom_select">
                <select id="sort-date" class="form-select select-nice">
                  <option value="all">All</option>
                  <option value="daily">Daily</option>
                  <option value="weekly">Weekly</option>
                  <option value="monthly">Monthly</option>
                  <option value="yearly">Yearly</option>
                  <option value="custom">Custom</option>
                </select>
              </div>
            </div>


              <form id="custom-date-div" style="display: none">
              <div class="col-md-2 col-6" id="startDate" style="width: auto">
                <h6>Start date</h6>
                <input id="start-date" type="date" class="form-control" required>
              </div>
              <div class="col-md-2 col-6" id="endDate" style="width: auto">
                <h6>End date</h6>
                <input id="end-date" type="date" class="form-control" required>
              </div>
              <div
                class="col-md-2 col-6"
                id="customGenerate"
                style="width: auto"
              >
                <br />
                <button type="button" id="generate-custom-btn" class="btn btn-primary">Generate</button>
              </div>
            </form>

          </div>
          <!-- Date Filter Drop -->

          <div class="table-responsive">
            <table class="table">
              <thead>
                <tr>
                  <th>SI.No</th>
                  <th>Order Id</th>
                  <th>Billing Name</th>
                  <th>Date</th>
                  <th>Coupon Deduction</th>
                  <th>Offer Deduction</th>
                  <th>Total</th>
                  <th>Payment Method</th>
                </tr>
              </thead>
              <tbody id="table-body">
                
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Custom js -->
<script src="/script/admin/s-report.js" defer></script>

<!-- Cdn -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/axios/1.7.7/axios.min.js" defer></script>

