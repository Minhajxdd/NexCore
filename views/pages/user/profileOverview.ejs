<div class="container profile-edit-container">
    <div class="row">
        <div class="col-md-6 col-md-offset-3 profile-card-custom text-center">
            <h2>Update Profile</h2>
            <form>
                <!-- Email Section -->
                <div class="form-group-custom">
                    <label for="email-custom">Email</label>
                    <div class="input-group-custom">
                        <input type="email" class="form-control-custom" id="email-custom" value="<%= user.email %>" disabled>
                        <button style="visibility: hidden;" type="button" class="btn btn-blue-custom edit-btn-custom" id="reset-email-custom">Reset</button>
                         
                    </div>
                </div>

                <!-- Full Name Section -->
                <div class="form-group-custom">
                    <label for="full-name-custom">Full Name</label>
                    <div class="input-group-custom">
                        <input type="text" class="form-control-custom" id="full-name-custom" value="<%= user.full_name %>">
                        <button onclick="resetName()" type="button" class="btn btn-blue-custom edit-btn-custom" id="save-fullname-custom">Save</button>
                   
                        <span id="full-name-error_message" style="color: rgba(255, 0, 0, 0.732);font-weight: bolder;"></span>
                    </div>
                </div>

                <!-- Mobile Number Section -->
                <div class="form-group-custom">
                    <label for="mobile-number-custom">Mobile Number</label>
                    <div class="input-group-custom">
                        <input type="text" class="form-control-custom" id="mobile-number-custom" value="<%= user.phone_number %>">
                        <button onclick="resetNumber()" type="button" class="btn btn-blue-custom edit-btn-custom" id="save-mobile-custom">Save</button>

                        <span id="mobil-number-error_message" style="color: rgba(255, 0, 0, 0.732);font-weight: bolder;"></span>
                    </div>
                </div>

                <!-- Random Password Section -->
                <div class="form-group-custom">
                    <label for="random-password-custom">Password</label>
                    <div class="input-group-custom">
                        <input type="password" class="form-control-custom" id="random-password-custom" value="••••••••••" disabled>
                        <a href="/password_reset">
                            <button type="button" class="btn btn-blue-custom edit-btn-custom" id="reset-password-custom">Reset</button>
                        </a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>





