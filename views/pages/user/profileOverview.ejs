<title>Profile Overview</title>


<style>

/* Basic styling for background and fonts */
body {
    background-color: #f8f9fa;
    font-family: 'Poppins', sans-serif;
    color: #333;
}

.profile-edit-container {
    margin-top: 50px;
}

.profile-card-custom {
    background-color: #fff;
    padding: 30px;
    border-radius: 12px;
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
    animation: fadeInCustom 1s ease-in-out;
}

/* Title Styling */
h2 {
    font-size: 24px;
    color: #333;
    margin-bottom: 20px;
    animation: slideDownCustom 1.2s ease;
}

/* Form Styling */
.form-group-custom {
    margin-bottom: 20px;
}

label {
    font-size: 14px;
    color: #666;
    margin-bottom: 8px;
}

.input-group-custom {
    position: relative;
}

.form-control-custom {
    border: 1px solid #ddd;
    background-color: #f5f5f5;
    border-radius: 20px;
    padding: 10px 15px;
    font-size: 14px;
    width: calc(100% - 100px); /* Adjust input width to leave room for the button */
    display: inline-block;
    color: #333;
    transition: border-color 0.3s ease-in-out;
}

.form-control-custom:focus {
    border-color: #3498db;
    outline: none;
}

/* Blue Button Styling */
.btn-blue-custom {
    background-color: #3498db;
    color: white;
    border: none;
    border-radius: 20px;
    padding: 10px 15px;
    margin-left: 10px;
    cursor: pointer;
    display: inline-block;
    transition: background-color 0.3s ease, transform 0.3s ease;
}

.btn-blue-custom:hover {
    background-color: #2980b9;
    transform: scale(1.05);
}

/* Animation */
@keyframes fadeInCustom {
    from {
        opacity: 0;
    }
    to {
        opacity: 1;
    }
}

@keyframes slideDownCustom {
    from {
        transform: translateY(-30px);
    }
    to {
        transform: translateY(0);
    }
}

/* Responsive tweaks */
@media (max-width: 768px) {
    .profile-card-custom {
        padding: 20px;
    }

    h2 {
        font-size: 22px;
    }

    .form-control-custom {
        font-size: 13px;
        padding: 10px;
        width: 100%; /* Full width for small screens */
        display: block;
    }

    .btn-blue-custom {
        margin-top: 10px;
        display: block; /* Full width for small screens */
        width: 100%;
    }
}


</style>





