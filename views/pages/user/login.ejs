<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>Signup</title>
    
    <!-- Google font -->
    <link href="/style/cdn/googleFontMontserrat.css" rel="stylesheet">

    <!-- Bootstrap -->
	<link type="text/css" rel="stylesheet" href="/style/cdn/bootstrap.css"/>

    <!-- Font Awesome Icon -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css">

    <!-- Style Sheet -->
    <link rel="stylesheet" href="/style/form-style.css">

    <style>
        html{
            height: 100%;
        }
    </style>

</head>

<body>

    <!-- SIGNUP FORM -->
    <div class="signup-form mt-5">
        <h2 style="font-size: 1.9em;">Login to Your Account</h2>
        <!-- Error message placeholder -->
        <label id="error_message" style="color: red; font-weight: bolder;"></label> 

        <form action="/login" method="POST" onsubmit="return validateLoginForm()">

            <div class="form-group">
                <input id="email" type="email" class="form-control" placeholder="Email" name="email" required data-toggle="tooltip" data-placement="top" title="Enter your email address">
            </div>

            <div class="form-group">
                <input id="password" type="password" class="form-control" placeholder="Password" name="password" required data-toggle="tooltip" data-placement="top" title="Create a password">
            </div>

            <button type="submit" class="btn btn-signup">Sign Up <i class="fas fa-arrow-right"></i></button>
        </form>
        <div class="footer-links">
            <a href="/password_reset">Forgot Password?</a>
            <a href="/signup">Create Account</a>
        </div>
      
    </div>
    <!-- /SIGNUP FORM -->

    <!-- jQuery Plugins -->
    <script src="/script/jQuery.js"></script>
    <script src="/script/bootstrap.min.js"></script>
    <script src="/script/validate.js"></script>

    <script>
        $(function () {
            $('[data-toggle="tooltip"]').tooltip()
        })
    </script>

</body>

</html>
