                    <% product.images.forEach((val) => { %>
                        <div class="product-preview">
                            <img src="/uploads/products/<%= val %>" alt="product image">
                        </div>
                    <% }) %>
                </div>
            </div>
            <!-- /Product main img -->

            <!-- Product thumb imgs -->
            <div class="col-md-2  col-md-pull-5">
