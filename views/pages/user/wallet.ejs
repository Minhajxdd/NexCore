<%- include('../../partials/user/nav'); -%>

<title>Wallet</title>

<style>
  body {
      background-color: #f9fafc;
      font-family: 'Roboto', sans-serif;
      color: #333;
  }

  .wallet-container {
      max-width: 900px;
      margin: 50px auto;
      padding: 30px;
      background-color: #fff;
      border-radius: 12px;
      border: 1px solid #e0e0e0;
      box-shadow: 0px 4px 12px rgba(0, 0, 0, 0.05);
  }

  /* Wallet Header */
  .wallet-header {
      text-align: center;
      margin-bottom: 30px;
  }

  .wallet-header h2 {
      font-size: 28px;
      font-weight: 500;
      color: #333;
  }

  /* Balance Section */
  .balance-card {
      background-color: #f2f7f9;
      padding: 30px;
      color: #333;
      border-radius: 12px;
      border: 1px solid #dcdcdc;
      margin-bottom: 30px;
      display: flex;
      justify-content: space-between;
      align-items: center;
  }

  .balance-card h3 {
      font-size: 22px;
      font-weight: 500;
      margin: 0;
  }

  .balance-card p {
      font-size: 28px;
      margin: 0;
      font-weight: bold;
  }

  .balance-card i {
      font-size: 50px;
      color: #b0b0b0;
  }

  /* Unified Transactions Section */
  .transactions-section {
      margin-top: 20px;
  }

  .section-title {
      font-size: 22px;
      font-weight: 500;
      margin-bottom: 20px;
      color: #333;
  }

  /* Transactions & Bonuses List */
  .transaction-item {
      display: flex;
      justify-content: space-between;
      background-color: #ffffff;
      padding: 15px;
      border-radius: 10px;
      border: 1px solid #e0e0e0;
      margin-bottom: 10px;
      box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.02);
      transition: background-color 0.3s ease;
  }

  .transaction-item:hover {
      background-color: #f7f7f7;
  }

  .transaction-item .description {
      display: flex;
      align-items: center;
      font-size: 16px;
      color: #555;
  }

  .transaction-item i {
      margin-right: 15px;
      font-size: 18px;
      color: #888;
  }

  .transaction-item .amount {
      font-size: 16px;
      font-weight: bold;
      text-align: right;
  }

  .transaction-item .expense {
      color: #e74c3c;
  }

  .transaction-item .income {
      color: #27ae60;
  }

  .transaction-item .bonus {
      color: #3498db;
  }

  /* Withdraw & Add Funds Button */
  .btn-actions {
      display: flex;
      justify-content: space-between;
      margin-top: 30px;
  }

  .btn-action {
      background-color: #3498db;
      color: white;
      border-radius: 25px;
      padding: 12px 35px;
      font-size: 16px;
      font-weight: bold;
      text-align: center;
      text-transform: uppercase;
      transition: background-color 0.3s ease;
      width: 48%;
  }

  .btn-action:hover {
      background-color: #2980b9;
  }

  .btn-withdraw {
      background-color: #e74c3c;
  }

  .btn-withdraw:hover {
      background-color: #c0392b;
  }

  /* Responsive Design */
  @media (max-width: 768px) {
      .balance-card {
          flex-direction: column;
          text-align: center;
      }

      .balance-card i {
          margin-top: 20px;
      }

      .btn-actions {
          flex-direction: column;
          align-items: center;
      }

      .btn-action {
          width: 100%;
          margin-bottom: 15px;
      }
  }
</style>
</head>
<body>

<div class="wallet-container">
  <!-- Wallet Header -->
  <div class="wallet-header">
      <h2><i class="fa fa-wallet"></i> My Wallet</h2>
  </div>

  <!-- Wallet Balance Section -->
  <div class="balance-card">
      <div>
          <h3>Current Balance</h3>
          <% if(wallet){ %>
              <p>₹<%= wallet.balance_amount %></p>
          <% }else{ %>
            <p>₹ 00</p>
          <% } %>
      </div>
      <i class="fa fa-money"></i>
  </div>

  <!-- Unified Transactions and Bonuses Section -->
  <div class="transactions-section">
      <h4 class="section-title">Transactions</h4>

    <% if(wallet){ %>

      <% wallet.transactions.forEach((val) => { %>

        <% if(val.transaction_type === 'credit'){ %>

          <div class="transaction-item">
              <div class="description">
                  <i class="fa fa-plus-circle"></i>
                  <%= val.description %>
              </div>
              <div class="amount expense">+ ₹<%= val.amount %></div>
          </div>

        <% }else{ %>

          <div class="transaction-item">
            <div class="description">
              <i class="fa fa-minus-circle"></i>
              <%= val.description %>
          </div>
          <div class="amount expense">+ ₹<%= val.amount %></div>
          </div>

        <% } %>

      <% }) %>
      <% }else{ %>

      <% } %>


  </div>

  <!-- Withdraw & Add Funds Buttons -->
  <div class="btn-actions">
    <% if(wallet){ %>
        <a href="#" class="btn-action btn-withdraw"><i class="fa fa-minus"></i> Withdraw</a>
        <a href="#" class="btn-action"><i class="fa fa-plus"></i> Add Funds</a>
        <% }else{ %>
          <a style="width: 100%;" href="#" class="btn-action"><i class="fa fa-plus"></i> Add Funds</a>

        <% } %>
  </div>
</div>


<%- include('../../partials/user/footer'); -%>
