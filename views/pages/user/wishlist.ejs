<% if(products) { %>


  <% if(products.length !== 0){ %>


<div class="cart-wrap">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="main-heading mb-10" id="my-wishlist-heading">My wishlist</div>
                <div class="table-wishlist">
                    <table cellpadding="0" cellspacing="0" border="0" width="100%">
                        
                        <thead id="table-head">
                            <tr>
                                <th width="45%">Product Name</th>
                                <th width="15%">Price</th>
                                <th width="15%">Stock Status</th>
                                <th width="15%"></th>
                                <th width="10%"></th>
                            </tr>
                        </thead>
                        <tbody id="products-body">



                    <% products.forEach((val) =>{ %>
                        <tr class="product-tr">
                            <td width="45%">
                                <div class="display-flex align-center">
                                    <div class="img-product">
                                        <img src="/uploads/products/<%= val.images[0] %>" alt="" class="mCS_img_loaded">
                                    </div>
                                    <div class="name-product">
                                        <a href="/product?id=<%= val._id %>">
                                            <%= val.name.substring(0,60)+"..." %>
                                        </a>
                                    </div>
                                </div>
                            </td>
                            <td width="15%" class="price">â‚¹ <%= new Intl.NumberFormat('en-IN').format(val.discounted_price) %></td>
                            
                            <% if(val.stock > 0){ %>
                                <td width="15%"><span class="in-stock-box" style="background-color: rgb(193, 200, 53);">Stock Left : <%= val.stock %></span></td>
                                <td width="15%"><button data-id="<%= val._id %>"  class="round-black-btn small-btn add-to-cart-btn">Add to Cart</button></td>
                            <% }else{ %>
                                <td width="15%"><span class="in-stock-box">Stock Left : <%= val.stock %></span></td>
                                <td width="15%"><button class="round-black-btn small-btn">Out of Stock</button></td>
                            <% } %>

                            <td width="10%" class="text-center"><a class="trash-icon"><i data-id="<%= val._id %>" class="far fa-trash-alt remove-item-btn"></i></a></td>
                        </tr>

                    <% }) %>
                <% } else { %>


                   
                    <!-- Empty Wishlist Div -->
<div id="emptyWishlist" class="wishlist-empty text-center">
    <i class="fas fa-heart-broken icon"></i>
    <h2 class="message">Your Wishlist is Empty!</h2>
    <p class="description">Start adding items you love to your wishlist to easily find them later.</p>
    <button class="btn btn-primary" onclick="window.location.href='/'">Browse Shop</button>
  </div>
  
  
 
  
                      
                      

                <% } %>            
                
                
<% } else{ %>

<!-- Empty Wishlist Div -->
<div id="emptyWishlist" class="wishlist-empty text-center">
    <i class="fas fa-heart-broken icon"></i>
    <h2 class="message">Your Wishlist is Empty!</h2>
    <p class="description">Start adding items you love to your wishlist to easily find them later.</p>
    <button class="btn btn-primary" onclick="window.location.href='/'">Browse Shop</button>
  </div>

<% } %>

<!-- Empty Wishlist Div -->
<div id="emptyWishlist-hidden" class="wishlist-empty text-center" style="display: none;">
