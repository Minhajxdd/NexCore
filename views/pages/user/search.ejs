<%- include('../../partials/user/nav'); -%>

<style>
    /* Popup styling */
    #popup-wishlist {
        display: none;
        position: fixed;
        bottom: 20px;
        right: 20px;
        background-color: #4CAF50;
        color: white;
        padding: 16px;
        border-radius: 5px;
        font-size: 16px;
        box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
        z-index: 1000;
        transition: opacity 0.3s ease;
    }

    #popup-wishlist i {
        margin-right: 8px;
    }

    .show {
        display: block;
        opacity: 1;
    }
</style>

    <title>Search</title>

		<!-- NAVIGATION -->
		<nav id="navigation">
			<!-- container -->
			<div class="container">
				<!-- responsive-nav -->
				<div id="responsive-nav">
					<!-- NAV -->
					<ul class="main-nav nav navbar-nav">
						<li><a href="/">Home</a></li>
						<li><a href="#">Hot Deals</a></li>
						<li><a href="#">Categories</a></li>
						<li><a href="/categories/processors">Processors</a></li>
						<li><a href="/categories/graphics-card">Graphis Card</a></li>
						<li><a href="/categories/mother-board">Mother Board</a></li>
						<li><a href="/categories/storage">Storage</a></li>
						<li><a href="/categories/memory">Memory</a></li>
					</ul>
					<!-- /NAV -->
				</div>
				<!-- /responsive-nav -->
			</div>
			<!-- /container -->
		</nav>
		<!-- /NAVIGATION -->







        <!-- SECTION -->
		<div class="section">
			<!-- container -->
			<div class="container">
				<!-- row -->
				<div class="row">
					<!-- ASIDE -->
					<div id="aside" class="col-md-3">
						<!-- aside Widget -->
						<div class="aside">
							<h3 class="aside-title">Category</h3>
							<div class="checkbox-filter">
								<% categories.forEach((val, ind) => { %>
									<div class="input-checkbox">
										<input type="checkbox" class="category-check-boxes" value="<%= val.name %>" id="brand-<%= ind %>">
										<label for="brand-<%= ind %>">
											<span></span>
											<%= val.name %>
										</label>
									</div>
								<% }) %>
								
							</div>
						</div>
						<!-- /aside Widget -->

						<!-- aside Widget -->
						<div class="aside">
							<h3 class="aside-title">Price</h3>
							<div class="price-filter">
								<div id="price-slider"></div>
								<div class="input-number price-min" id="price-minfsdf">
									<input id="price-min" type="number">
									<span class="qty-up">+</span>
									<span class="qty-down">-</span>
								</div>
								<span>-</span>
								<div class="input-number price-max" id="prifce-max">
									<input id="price-max" type="number">
									<span class="qty-up">+</span>
									<span class="qty-down">-</span>
								</div>
							</div>
						</div>
						<!-- /aside Widget -->

						
	
					</div>
					<!-- /ASIDE -->

					<!-- STORE -->
					<div id="store" class="col-md-9">
						<!-- store top filter -->
						<div class="store-filter clearfix">
							<div class="store-sort">
								<label>
									Sort By:
									<select class="input-select" id="itemSortingSelect">
										<option value="0">Featured</option>
										<option value="1">Price: Low to High</option>
                                        <option value="2">Price: High to Low</option>
									</select>
								</label>

									<label>
										Show:
										<select class="input-select" id="itemsPerPageSelect">
											<option value="3">3</option>
											<option value="6" selected>6</option>
											<option value="9">9</option>
											<option value="12">12</option>
										</select>
									</label>

							</div>
					
						</div>
						<!-- /store top filter -->

						<!-- store products -->
						<div class="row">

							
<!-- Product data will be injected here -->
				<div id="product-container">
					
				</div>


						</div>
						<!-- /store products -->

						<!-- store bottom filter -->
						<div class="store-filter clearfix">
							<span class="store-qty">Showing 20-100 products</span>
							<ul class="store-pagination">
								<li class="active pagenation-btns" style="color: black;">1</li>
								<li class="pagenation-btns"><a>2</a></li>
								<li class="pagenation-btns"><a>3</a></li>
								<li class="pagenation-btns"><a>4</a></li>
								<li class="pagenation-btns"><a><i class="fa fa-angle-right"></i></a></li>
							</ul>
						</div>
						<!-- /store bottom filter -->
					</div>
					<!-- /STORE -->
				</div>
				<!-- /row -->
			</div>
			<!-- /container -->
		</div>
		<!-- /SECTION -->

<div id="popup-wishlist"><i class="fas fa-check-circle"></i>Item added to wishlist successfully!</div>


