<div class="container">
    <div class="referral-card">
        <h3>Invite Friends & Earn Rewards</h3>
        <p>Share your unique referral link and earn â‚¹100 rupess for every friend who signs up!</p>
        
        <div class="referral-input">
            <input type="text" id="referralLink" readonly value="https://mohammedminhaj.blog/signup?ref-id=<%= userId %>">
            <button class="copy-btn" onclick="copyReferralLink()">
                <i class="fa fa-copy"></i> Copy
            </button>
        </div>
        
        <p class="copy-alert" id="copyAlert">Copied to Clipboard!</p>
    </div>
</div>

<script>
    function copyReferralLink() {
        var referralLink = document.getElementById("referralLink");
        referralLink.select();
        document.execCommand("copy");

        var copyAlert = document.getElementById("copyAlert");
        copyAlert.style.display = 'block';
        copyAlert.classList.add('fadeInOut');
        
        setTimeout(function() {
            copyAlert.style.display = 'none';
            copyAlert.classList.remove('fadeInOut');
        }, 1500);
    }
</script>


